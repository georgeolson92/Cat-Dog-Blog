{{#if updateAuthorForm}}
  <h2>Update Author</h2>
  <form>
    <div class="form-group">
      <label for="fullName">Full Name</label>
      {{input value=fullName id="fullName" placeholder=post.fullName}}
    </div>
    <div class="form-group">
      <label for="positionTitle">Position Title</label>
      {{input value=positionTitle id="positionTitle" placeholder=post.positionTitle}}
    </div>
    <div class="form-group">
      <label for="bio">Bio</label>
      {{input value=bio id="bio" placeholder=post.bio}}
    </div>
    <button {{action 'update' author}}>Save</button>
  </form>
{{else}}
  <button {{action "updateAuthorForm"}}>Update</button>
{{/if}}
