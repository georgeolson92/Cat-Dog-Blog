{{#if addNewPost}}
  <h1>New Post</h1>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{textarea value=content id="content" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image" class="form-control"}}
    </div>
    <button {{action 'save1' post}} class="btn btn-primary end">Save</button>
  </form>
{{else}}
  <button {{action "postFormShow"}} class="btn btn-primary end">New Post</button>
{{/if}}
