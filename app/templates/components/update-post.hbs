{{#if updatePostForm}}
  <h1>Update Post</h1>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" placeholder=post.title class="form-control"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=post.author class="form-control"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" placeholder=post.date class="form-control" type="date"}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{textarea value=content id="content" placeholder=post.content class="form-control"}}
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image" placeholder=post.image class="form-control"}}
    </div>
    <button {{action 'update' post}} class="btn btn-primary">Save</button>
  </form>
{{ else }}
  <button {{action 'updatePostForm'}} class="btn btn-primary">Update Post</button>
{{/if}}
