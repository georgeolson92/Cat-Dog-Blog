<div class="row">
  <div class="col-sm-3">
  {{#link-to 'post' post.id}}
    <h2>{{post.title}} by {{post.author.fullName}}</h2>
  {{/link-to}}
    <h4>{{post.date}}</h4>
  </div>
  <div class="col-sm-6">
    <img src={{post.image}} alt={{post.title}} />
  </div>
  <div class="col-sm-3">
    {{post.content}}
  </div>
</div>
