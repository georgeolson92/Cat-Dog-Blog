<form>
  <div class="form-group">
    <label for="userName">User Name</label>
    {{input value=userName id="userName" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="commentDate">Date</label>
    {{input value=commentDate id="commentDate" class="form-control" type="date"}}
  </div>
  <div class="form-group">
    <label for="commentText">Content</label>
    {{textarea value=commentText id="commentText" class="form-control"}}
  </div>
  <button {{action 'saveComment'}} class="btn btn-primary end">Save</button>
</form>
